<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>

        <item name="colorSecondary">@color/md_green_500</item>
        <item name="colorSecondaryVariant">@color/md_green_700</item>
        <item name="colorOnSecondary">@color/md_green_300</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/grey_cc</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="autoCompleteTextViewStyle">@style/myAutoCompleteTextViewStyle</item>
        <item name="textAppearanceSearchResultTitle">@style/mySearchResult</item>
        <item name="materialButtonStyle">@style/App.GeneralButton</item>

        <item name="android:textViewStyle">@style/Deifr.DefaultFontStyle</item>
    </style>

    <style name="AppTheme.WithActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>

        <item name="colorSecondary">@color/md_green_500</item>
        <item name="colorSecondaryVariant">@color/md_green_700</item>
        <item name="colorOnSecondary">@color/md_green_300</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/grey_cc</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="autoCompleteTextViewStyle">@style/myAutoCompleteTextViewStyle</item>
        <item name="textAppearanceSearchResultTitle">@style/mySearchResult</item>

        <item name="materialButtonStyle">@style/App.GeneralButton</item>
    </style>

    <style name="AppTheme.Main" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>

        <item name="colorSecondary">@color/md_green_500</item>
        <item name="colorSecondaryVariant">@color/md_green_700</item>
        <item name="colorOnSecondary">@color/md_green_300</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/grey_cc</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="materialButtonStyle">@style/App.GeneralButton</item>
    </style>

    <style name="AppTheme.Login" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>

        <item name="colorSecondary">@color/md_green_500</item>
        <item name="colorSecondaryVariant">@color/md_green_700</item>
        <item name="colorOnSecondary">@color/md_green_300</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here -->
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="materialButtonStyle">@style/App.GeneralButton</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <declare-styleable name="SignaturePad">
        <attr name="penMinWidth" format="dimension" />
        <attr name="penMaxWidth" format="dimension" />
        <attr name="penColor" format="color" />
        <attr name="velocityFilterWeight" format="float" />
        <attr name="clearOnDoubleClick" format="boolean" />
    </declare-styleable>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!--BOTTOM SHEET-->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ProgressDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <!--   overlay     -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@drawable/line_border</item>

    </style>

    <!-- ToolBar -->
    <style name="myAutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">#ffffff</item>
    </style>

    <style name="mySearchResult" parent="TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:textColor">#000000</item>
    </style>

    <!--  Buttons  -->
    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">5dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="PrimaryButton" parent="MyButton">
        <item name="materialThemeOverlay">@style/PrimaryButtonThemeOverlay</item>
    </style>

    <style name="PrimaryButtonThemeOverlay">
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorOnSurface">@android:color/white</item>
    </style>

    <style name="App.GeneralButton" parent="MyButton">
        <item name="materialThemeOverlay">@style/MaterialTealButtonThemeOverlay</item>
    </style>

    <style name="MaterialTealButtonThemeOverlay">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@android:color/white</item>
    </style>

    <style name="MyTitleText" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MyRegularText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--  TEXT  -->
    <style name="Deifr.DefaultFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Deifr.BlackNormal" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Deifr.BlackBold" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Deifr.WhiteBold" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
