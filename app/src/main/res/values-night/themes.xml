<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>

        <item name="colorSecondary">@color/md_green_500</item>
        <item name="colorSecondaryVariant">@color/md_green_700</item>
        <item name="colorOnSecondary">@color/md_green_300</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/grey_cc</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="autoCompleteTextViewStyle">@style/myAutoCompleteTextViewStyle</item>
        <item name="textAppearanceSearchResultTitle">@style/mySearchResult</item>
        <item name="materialButtonStyle">@style/App.GeneralButton</item>

        <item name="android:textViewStyle">@style/Deifr.DefaultFontStyle</item>
    </style>

    <style name="AppTheme.WithActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>

        <item name="colorSecondary">@color/md_green_500</item>
        <item name="colorSecondaryVariant">@color/md_green_700</item>
        <item name="colorOnSecondary">@color/md_green_300</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/grey_cc</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="autoCompleteTextViewStyle">@style/myAutoCompleteTextViewStyle</item>
        <item name="textAppearanceSearchResultTitle">@style/mySearchResult</item>

        <item name="materialButtonStyle">@style/App.GeneralButton</item>
    </style>
</resources>